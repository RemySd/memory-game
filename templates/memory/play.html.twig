{% extends 'base.html.twig' %}

{% block title %}In game
{% endblock %}

{% block stylesheet %}
	<link href="{{ asset('styles/card.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

	<div class="container text-center">
		<div class="row">
			<div class="col-12">
				{% for i in 0..4 %}
					<div class="line">
						{% for cell in memoryGrid.cells|slice(i * 4 , 4) %}
							<div class="cell" style="width: 100px; height: 100px">
								{% if cell.flip %}
									<img src="{{ asset('images/' ~ cell.image ~ '.png') }}" class="card-img-top" alt="{{ cell.image }}">
								{% else %}
									<a href="{{ path('app_memory_play', {'cell': loop.index0 + i * 4}) }}">
										<img src="{{ asset('images/question_mark.png') }}" class="card-img-top" alt="question mark">
									</a>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endfor %}

			</div>
		</div>
	</div>

{% endblock %}
