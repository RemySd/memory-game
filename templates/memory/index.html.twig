{% extends 'base.html.twig' %}

{% block title %}Hello MemoryController!
{% endblock %}

{% block stylesheet %}
	<link href="{{ asset('styles/card.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

	<div class="container text-center">
		<div class="row">
			<div class="col-12">
				{% for i in 0..4 %}
					<div class="line">
						{% for cell in memoryGrid.cells|slice(i * 4 , 4) %}
							<div class="cell" style="width: 100px; height: 100px">
								<img src="{{ asset('images/' ~ cell.image ~ '.png') }}" class="card-img-top" alt="{{ cell.image }}">
							</div>
						{% endfor %}
					</div>
				{% endfor %}

			</div>
		</div>
	</div>

{% endblock %}
